<h2>Join the Club</h2>

<p>Enter the secret code to become a club member and see message authors!</p>

<% if (errors.length > 0) { %>
<div class="alert alert-error">
  <ul>
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }); %>
  </ul>
</div>
<% } %>

<form method="POST" action="/membership" class="card form-container">
  <div class="form-group">
    <label for="code">Secret Code:</label>
    <input type="text" id="code" name="code" class="form-input" required />
  </div>

  <div>
    <button type="submit" class="btn">Join Club</button>
    <a href="/">Cancel</a>
  </div>
</form>
