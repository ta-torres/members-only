<h2>Create New Message</h2>

<% if (errors.length > 0) { %>
<div class="alert alert-error">
  <ul>
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }); %>
  </ul>
</div>
<% } %>

<form method="POST" action="/messages/new" class="form-container">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      class="form-input"
      value="<%= locals.formData ? formData.title : '' %>"
      required
    />
  </div>

  <div class="form-group">
    <label for="content">Message</label>
    <textarea id="content" name="content" class="form-input" rows="6" required>
<%= locals.formData ? formData.content : '' %></textarea
    >
  </div>

  <div>
    <button type="submit" class="btn">Create Message</button>
    <a href="/">Cancel</a>
  </div>
</form>
